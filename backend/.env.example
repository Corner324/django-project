# Main App

BACKAND_DEBUG=True
# Включает режим отладки Django (True = режим разработки с подробными ошибками, False = продакшн).

BACKAND_SECRET_KEY=some-secret-key
# Секретный ключ Django для криптографических операций (подписей сессий, токенов и т.п.). Обязательно использовать уникальный и сложный в продакшене.

DATABASE_URL=postgres://user:password@db:5432/django_project
# URL подключения к базе данных в формате: postgres://<пользователь>:<пароль>@<хост>:<порт>/<имя_базы>.
# Используется Django с библиотекой dj-database-url для парсинга подключения к PostgreSQL.

BACKAND_ALLOWED_HOSTS=127.0.0.1,localhost,example.com
# Список разрешённых хостов, с которых разрешено обслуживать запросы (перечислены через запятую).
# Например, для разработки: 127.0.0.1,localhost. В продакшене — домен сайта.

# Database

POSTGRES_USER=user
# Имя пользователя для PostgreSQL (используется внутри контейнера базы данных).

POSTGRES_PASSWORD=password
# Пароль пользователя PostgreSQL.

POSTGRES_DB=django_project
# Имя создаваемой базы данных PostgreSQL.
